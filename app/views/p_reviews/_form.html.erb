<%= form_with(model: p_review, local: true) do |f| %>
<div class='login center'>
  <%= image_tag('logo.png', alt:'Nucifera Logo', class:'img-box',style:'width:300px;height:100px;')%>
</div>

  <% if p_review.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(p_review.errors.count, "error") %> prohibited this review from being saved:</h2>

      <ul>
      <% p_review.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <div class="field">
      <%= f.label :rating %>
      <div id='urating'></div>
    </div>
  </div>

  <div class="form-group">
    <div class='field'>
      <%= f.label "Title" %>
      <%= f.text_field :headline, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="field">
      <%= f.label "Review" %>
      <%= f.text_area :content, class: "form-control text-box" %>
    </div>
  </div>
    <%= f.hidden_field :product_id, value:params[:product]%>
  <div class="actions">
    <%= f.submit 'Create Review', class:'btn btn-primary' %>
  </div>
<% end %>

<script>
  $('#urating').raty({
      path: '/assets/',
      readOnly: false,
      scoreName:"p_review[rating]",
      half: true,
      score: function() {
            return $(this).attr('data-score');
    }
  });
</script>